<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:clipToPadding="false"
xmlns:card_view="http://schemas.android.com/apk/res-auto">


<androidx.cardview.widget.CardView
    android:padding="5dp"
    android:id="@+id/card_view"
    android:layout_gravity="center"
    android:layout_width="300dp"
    android:layout_height="290dp"

    card_view:cardCornerRadius="2dp"
    android:layout_centerVertical="true"
    android:layout_centerHorizontal="true"
    card_view:cardElevation="15dp">

    <TextView
        android:id="@+id/textv"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:padding="8dp"
        android:text="This quiz was made for a compulsory elective at school: IKPMD. My assignment is to create an app of your choice. I chose a quiz because then I can learn for my studies with questions I have made. During the lessons we practiced with firebase, sqllite, visualisations of data. In the assignment you must have worked with firebase. You must be able to process all data to the database both online and offline. I thought it was a fun challenge and learned a lot from it. "        android:textSize="16sp" />
</androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="118dp"
        android:layout_marginLeft="118dp"
        android:layout_marginTop="86dp"
        android:layout_marginEnd="122dp"
        android:layout_marginRight="122dp"
        android:text="About Us"
        android:textAlignment="center"
        android:textSize="25sp"
        android:textStyle="bold" />
</RelativeLayout>
