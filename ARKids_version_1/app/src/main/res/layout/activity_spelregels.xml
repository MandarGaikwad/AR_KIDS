<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:clipToPadding="false"
xmlns:card_view="http://schemas.android.com/apk/res-auto">


<androidx.cardview.widget.CardView
    android:padding="5dp"
    android:id="@+id/card_view"
    android:layout_gravity="center"
    android:layout_width="300dp"
    android:layout_height="285dp"
    card_view:cardCornerRadius="2dp"
    android:layout_centerVertical="true"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="10sp"
    card_view:cardElevation="15dp">

    <TextView
        android:id="@+id/textv"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:padding="8dp"
        android:text="Welcome to the quiz! This is a quiz to improve your study, you can add and change questions with the quiz so that you are better prepared for tests. How does it work? You will be presented with questions that you have made yourself. You will see the correct answer immediately after answering each question. At the end of the quiz you will see your total score. Good luck (and don't cheat)! For every correctly answered question you get 15 points and for every incorrectly answered question 5 points are deducted !! "      android:textSize="16sp" />
</androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="120dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="85dp"
        android:layout_marginEnd="120dp"
        android:layout_marginRight="120dp"
        android:textAlignment="center"
        android:text="Game rules"
        android:textSize="25sp"
        android:textStyle="bold" />
</RelativeLayout>
